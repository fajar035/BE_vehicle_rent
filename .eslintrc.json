{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": ["standard"],
    "parserOptions": {
        "ecmaVersion": 2015
    },
    "rules": {
        "semi": "error",
        "eqeqeq": "off",
        "curly": "off",
        "quotes": ["error", "double"],
        "prefer-promise-reject-errors": "off"
    }
}
